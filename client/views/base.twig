    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="{{ path('home') }}" class="navbar-brand">Top Cluck</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right">
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                      <li><a href="{{ path('user_logout') }}">Logout</a></li>
                  {% else %}
                      <li><a href="{{ path('user_register') }}">Register</a></li>
                      <li><a href="{{ path('user_login') }}">Login</a></li>
                  {% endif %}
                    <li><a href="http://builtwithbootstrap.com/" target="_blank">Built With Bootstrap</a></li>
                    <li><a href="http://bootswatch.com/slate/" target="_blank">BootsWatch</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="page-header" id="banner">
            <div class="row">
                <div class="col-lg-10">
                    {% block header %}
                        <h1>
                            Top Cluck
                        </h1>
                        <p>
                            The Fantasy Chicken League
                        </p>
                    {% endblock %}
                </div>
                <div class="col-lg-2">
                    <img src="{{ app.request.basePath }}/images/chicken-crop.png" style="position:absolute;right:0" width="150px"/>
                </div>
            </div>
        </div>

        {% block content %}
        {% endblock %}
    </div>

    </div>
</body>
